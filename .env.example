# .env.example - скопируйте в .env и заполните при необходимости

# Настройка сервиса трекинга
TRACKING_API_URL=            # Например: https://api.posttrack.example
TRACKING_API_KEY=            # Ваш API ключ для агрегатора трекинга
TRACKING_API_QUERY_TEMPLATE={api_url}/track?carrier={carrier}&number={tracking_number}

# Сервер
PORT=8000
HOST=0.0.0.0
TIMEOUT=20.0

# Поведение при отсутствии API (демо)
DEFAULT_TRANSIT_DAYS=5
DEFAULT_TRANSIT_DAYS_MAP={}  # Пример: {"cdek": 4, "russian-post": 7}

# Список поддерживаемых перевозчиков (CSV)
SUPPORTED_CARRIERS=cdek,russian-post,dhl,ups,fedex